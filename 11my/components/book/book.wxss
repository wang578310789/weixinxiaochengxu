.book{
    width:240rpx;
    height:360rpx;
    border-radius: 15rpx;
    background: #fff;
    box-shadow: 0 0 10px 3px rgb(204, 203, 203);
    display: flex;
    flex-direction: column;
}
.book image{
    width:100%;
    height:60%;
    border-radius: 15rpx
}
.title{
    margin-top: 10rpx;
    font-size: 24rpx;
    margin-left: 20rpx;
}
.author{
    margin-top: 10rpx;
    margin-left: 20rpx;
    color: rgb(145, 145, 145);
    font-size: 18rpx;
}
.like{
    margin-top: 10rpx;
    font-size: 24rpx;
    text-align: right;
    margin-right: 10rpx;
}