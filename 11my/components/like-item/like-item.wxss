.item{
    width:330rpx;
    height:470rpx;
    border:1rpx solid rgb(231, 231, 231);
    margin-bottom: 30rpx;
    background-color: #fff;
    margin-left: auto;
    margin-right: auto;
}
.header{
    height:90rpx;
    line-height: 90rpx;
    display: flex;
    justify-content: space-between;
    padding-left:20rpx;
    padding-right: 20rpx;
    align-items: center;
}
.banner{
    height:240rpx;
    width:100%;
}
.footer{
    padding:20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    height:100rpx;
}
.music{
    margin-left: auto;
    margin-right: auto;
    display: block;
    border-radius: 50%;
    width:200rpx;
    height:200rpx;
}
.cont{
    font-size: 30rpx;
    margin-left: 20rpx;
    margin-right: 10rpx;
    text-align: left;
    color: rgb(172, 172, 172);
}
