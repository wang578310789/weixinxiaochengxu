.container{
    background: rgb(238, 238, 238);
}
.content{
    display: flex;
    flex-direction: column;
    background: #ffffff;
    border-radius: 15px;
}
.image{
    width: 240rpx;
    margin-left: auto;
    margin-right: auto;
    margin-top: 20rpx;
}
.title{
    text-align: center;
    font-size: 42rpx;
    margin-top: 10rpx;
}
.author{
    text-align: center;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    color: rgb(138, 138, 138);
}
.short{
    border-radius: 15px;
    background: #ffffff;
    margin-top: 20rpx;
    text-align: center;
}
.short-title{
    font-size: 40rpx;
}
.nav{
    margin-top: 20rpx;
}
.nav v-tag:first-child>view{
    background: #FFFADD;
}
.nav v-tag:nth-child(2)>view{
    background: #EFFAFF;
}
.txt{
    color: rgb(190, 190, 190);
}
.introduce{
    border-radius: 15px;
    background: #ffffff;
    margin-top: 20rpx;
    padding: 30rpx 100rpx 30rpx 100rpx;
}
.introduce text{
    color: #868686;
}
.introduce-title{
    font-size: 40rpx;
    text-align: center;
    margin-bottom: 30rpx;
}
.information{
    display: flex;
    flex-direction: column;
    padding: 30rpx 100rpx 30rpx 100rpx;
    border-radius: 15px;
    background: #ffffff;
    margin-top: 20rpx;
    margin-bottom: 50rpx;
}
.information-title{
    text-align: center;
    font-size: 40rpx;
}
.information text{
    color: #a1a1a1;
}
.comment-input{
    width:710rpx;
    height:100rpx;
    background: #fff;
    position: fixed;
    left:0;
    bottom:0;
    border-top: 1rpx solid #999;
    display: flex;
    align-items: center;
    padding-left:20rpx;
    padding-right: 20rpx;
    justify-content: space-between;
}
.input-short{
    width:24rpx;
    height:24rpx;
}
.input{
    width:400rpx;
    height: 60rpx;
    border:1rpx solid #333;
    border-radius: 30rpx;
    display: flex;
    align-items: center;
    padding-left:20px;
}
.input text{
    margin-left: 5px;
}
.comment-content{
    position: fixed;
    z-index: 100;
    left:0;
    bottom: 0;
    width:100%;
    background: #fff;
}
.comment-head{
    display: flex;
    justify-content: space-between;
    padding-left: 20rpx;
    padding-right: 20rpx;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
    height:100rpx;
    align-items: center;
}
.text-input{
    width:680rpx;
    height: 70rpx;
    border:1rpx solid #333;
    border-radius: 30rpx;
}
.coment-wrap{
    height:100rpx;
}
.model{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgb(122, 121, 121);
    opacity: .6;
    z-index: 99;
}
.summary{
    text-indent: 20rpx;
    display: block;
}
.btn{
    border:none !important;
    display: inline-block !important;
    margin:0 !important;
}